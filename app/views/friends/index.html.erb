<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Frist Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
        <tr>
          <th><%= friend.first_name %></th>
          <th><%= friend.last_name %></th>
          <th><%= friend.email %></th>
          <th><%= friend.phone %></th>
          <th><%= friend.twitter %></th>
          <th><%= friend.user_id %></th>
          <th><%= link_to "Show", friend %></th>
          <th><%= link_to "Edit", edit_friend_path(friend) %></th>
          <th><%= link_to "Destroy", friend, data: {turbo_method: :delete, confirm: 'Are you sure ?'} %></th>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>
