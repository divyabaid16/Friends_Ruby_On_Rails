<% if user_signed_in? %>

  <table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
      </tr>
    </thead>
    <tbody>
      <% @friends.each do |friend| %>
        <% if friend.user == current_user %>
          <tr>
            <th><%= link_to friend.first_name + " " + friend.last_name, friend %></th>
            <th><%= friend.email %></th>
            <th><%= friend.phone %></th>
            <th><%= friend.twitter %></th>
            <%
=begin%>
 <th><%= link_to "Delete", friend, data: {turbo_method: :delete, confirm: 'Are you sure ?'} %></th> 
<%
=end%>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

<% else %>

  <h1>Hello World!</h1>
  <p>I'm still not logged in so can't see the page</p>

<% end %>
